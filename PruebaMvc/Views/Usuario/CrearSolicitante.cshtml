							@Html.DropDownListFor(model => model.id_tipo_poblacion, ViewBag.TipoPoblacion as IEnumerable<SelectListItem>, new { @class = "form-control" })
							@Html.ValidationMessageFor(model => model.id_tipo_poblacion, "", new { @class = "text-danger" })
						</div>
					</div>
