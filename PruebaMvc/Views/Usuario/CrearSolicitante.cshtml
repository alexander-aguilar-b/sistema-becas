							@Html.DropDownListFor(model => model.pais_residencia, ViewBag.Pais as IEnumerable<SelectListItem>, new { @class = "form-control" })							
							@Html.ValidationMessageFor(model => model.pais_residencia, "", new { @class = "text-danger" })
						</div>
					</div>
				</div>
			</div>

		
		<div class="container">
			<div class="form-group btn-container">
				<button type="submit" class="btn btn-success">Crear Solicitante</button>
				<a class="btn btn-primary" href="@Url.Action("CrearUsuarios", "Inicio")">Cancelar</a>
			</div>
		</div>
	
