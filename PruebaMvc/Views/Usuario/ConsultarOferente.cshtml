@model PruebaMvc.ModelsService.OferenteConsulta
@{

}
<br />
@using (Html.BeginForm("consultarOferenteId", "Usuario", FormMethod.Post))
{
    <div class="panel panel-default">
        <div class="panel-heading"><h4>Consultar Oferente</h4></div>
        <div class="panel-body">
            <table>
                <tr>
                    <td>
                        Id Oferente
                    </td>
                    <td>
                        <input type="text" id="id_Oferente" name="idOferente">
                    </td>
                    <td colspan="2" align="left">
                        <button type="submit" class="btn btn-primary">Buscar</button>
                    </td>
                </tr>
            </table>
        </div>
    </div>
    <div class="panel-heading">
        <h3>Oferente</h3>
    </div>
    <div class="panel-body">
        <h2 class="label label-success">@ViewBag.Message</h2>
        @if (Model != null)
        {
            <table class="table table-striped">
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.nombre)
                        Nombre: @Html.DisplayFor(model => model.nombre)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.correoElectronico)
                        Correo electrónico: @Html.DisplayFor(model => model.correoElectronico)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.rol.nombre)
                        Tipo Usuario: @Html.DisplayFor(model => model.rol.nombre)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.idEstadoSistema.descripcion)
                        Estado: @Html.DisplayFor(model => model.idEstadoSistema.descripcion)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.infoUsuario.nit)
                        Nit: @Html.DisplayFor(model => model.infoUsuario.nit)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.infoUsuario.descripcion)
                        Descripción: @Html.DisplayFor(model => model.infoUsuario.descripcion)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.infoUsuario.tipoEntidad.nombre)
                        Tipo entidad: @Html.DisplayFor(model => model.infoUsuario.tipoEntidad.nombre)
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.HiddenFor(model => model.infoUsuario.pais.nombre)
                        Pais: @Html.DisplayFor(model => model.infoUsuario.pais.nombre)
                    </td>
                </tr>

            </table>
        }
    </div>
}
